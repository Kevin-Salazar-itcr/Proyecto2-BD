@model IEnumerable<ProyectoCRM.Models.VistaVentasCotXdepto>

@{
    ViewData["Title"] = "Index";
}

<h1>Reporte</h1>

<div id="chart_div">
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venta)
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    title = 'Ventas y cotizaciones por departamento';
    width = 600;
    height = 600;
    columns.push(["string", "Nombre"]);
    columns.push(["number", "Venta"]);
    //google.charts.setOnLoadCallback(pieChart); // circular
    google.charts.setOnLoadCallback(BarChart); // barra
</script>
