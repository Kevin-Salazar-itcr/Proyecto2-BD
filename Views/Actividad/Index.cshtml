@model IEnumerable<ProyectoCRM.Models.Actividad>

@{
    ViewData["Title"] = "Index";
}

<h1>Mantenimiento de actividades</h1>


<table class="table table-striped ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AsesorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AsesorNavigation.Nombre)
            </td>
            <td>
                    <a class="btn btn-sm   btn-primary" asp-action="Edit" asp-route-id="@item.Id">Dar mantenimiento</a>
            </td>
        </tr>
}
    </tbody>
</table>
