@model ProyectoCRM.Models.ViewModels.ProductoVM

@{
    ViewData["Title"] = "Create";
}



<h4>Agregando producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Producto" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ObjProducto.Codigo" class="control-label"></label>
                <input asp-for="ObjProducto.Codigo" class="form-control" />
                <span asp-validation-for="ObjProducto.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjProducto.Nombre" class="control-label"></label>
                <input asp-for="ObjProducto.Nombre" class="form-control" />
                <span asp-validation-for="ObjProducto.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjProducto.Descripcion" class="control-label"></label>
                <input asp-for="ObjProducto.Descripcion" class="form-control" />
                <span asp-validation-for="ObjProducto.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjProducto.Precio" class="control-label"></label>
                <input asp-for="ObjProducto.Precio" class="form-control" />
                <span asp-validation-for="ObjProducto.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjProducto.Activo" class="control-label"></label>
                <input asp-for="ObjProducto.Activo" class="form-control" />
                <span asp-validation-for="ObjProducto.Activo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObjProducto.CodigoFamilia" class="control-label"></label>
                <select asp-for="ObjProducto.CodigoFamilia" class="form-control" asp-items="@Model.ObjListaFamilia"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
