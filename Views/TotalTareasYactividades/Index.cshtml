@model IEnumerable<ProyectoCRM.Models.TotalTareasYactividade>

@{
    ViewData["Title"] = "Index";
}

<h1>Top 10 cotizaciones con mas tareas y actividades</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCotizacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreOportunidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalTareasYActividades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroCotizacion)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreOportunidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTareasYActividades)
            </td>
        </tr>
}
    </tbody>
</table>
