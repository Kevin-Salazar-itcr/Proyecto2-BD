@model ProyectoCRM.Models.Cotizacione

@{
    ViewData["Title"] = "Create";
}

<h1>Creando cotizacion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroCotizacion" class="control-label"></label>
                <input asp-for="NumeroCotizacion" class="form-control" />
                <span asp-validation-for="NumeroCotizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreOportunidad" class="control-label"></label>
                <input asp-for="NombreOportunidad" class="form-control" />
                <span asp-validation-for="NombreOportunidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCotizacion" class="control-label"></label>
                <input asp-for="FechaCotizacion" class="form-control" />
                <span asp-validation-for="FechaCotizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCierra" class="control-label"></label>
                <input asp-for="FechaCierra" class="form-control" />
                <span asp-validation-for="FechaCierra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdenCompra" class="control-label"></label>
                <input asp-for="OrdenCompra" class="form-control" />
                <span asp-validation-for="OrdenCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factur" class="control-label"></label>
                <input asp-for="Factur" class="form-control" />
                <span asp-validation-for="Factur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moneda" class="control-label"></label>
                <select asp-for="Moneda" class ="form-control" asp-items="ViewBag.Moneda"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContactoAsociado" class="control-label"></label>
                <select asp-for="ContactoAsociado" class ="form-control" asp-items="ViewBag.ContactoAsociado"></select>
            </div>
            <div class="form-group">
                <label asp-for="Etapa" class="control-label"></label>
                <select asp-for="Etapa" class ="form-control" asp-items="ViewBag.Etapa"></select>
            </div>
            <div class="form-group">
                <label asp-for="Probabilidad" class="control-label"></label>
                <select asp-for="Probabilidad" class ="form-control" asp-items="ViewBag.Probabilidad"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class ="form-control" asp-items="ViewBag.Tipo"></select>
            </div>
            <div class="form-group">
                <label asp-for="RazonDenegacion" class="control-label"></label>
                <select asp-for="RazonDenegacion" class ="form-control" asp-items="ViewBag.RazonDenegacion"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContraQuien" class="control-label"></label>
                <select asp-for="ContraQuien" class ="form-control" asp-items="ViewBag.ContraQuien"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
